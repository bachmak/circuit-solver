{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\mingw-w64\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "${fileDirname}\\scheme_configuration\\sources\\**.cpp",
                "${fileDirname}\\structure_units\\sources\\**.cpp",
                "${fileDirname}\\system\\sources\\**.cpp",
                "${fileDirname}\\**.cpp",
                "-o",
                "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}